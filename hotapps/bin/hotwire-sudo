import sys, os
if sys.version_info[0] < 2 or sys.version_info[1] < 5:
    try:
        os.execvp('python2.5', ['python2.5'] + sys.argv)
    except OSError, e:
        print >>sys.stderr, "Hotwire requires Python 2.5"
        os._exit(1)

from hotapps.hotsudo.sudowindow import SudoApp
from hotvte.vtewindow import VteMain

VteMain().main(SudoApp)
